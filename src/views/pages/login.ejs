<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head', {title: 'Login | Inktale'}) %>
    <script type="module" src="/js/login.js"></script>
  </head>
  <body>
    <section class="section form-section">
      <div class="container">
        <div class="form-card">
          <div class="card-header">
            <a href="/" class="logo">
              <img
                src="/images/logo-light.svg"
                alt="Inktale Light"
                width="163"
                height="40"
                class="light"
              />
              <img
                src="/images/logo-dark.svg"
                alt="Inktale Dark"
                width="163"
                height="40"
                class="dark"
              />
            </a>

            <p class="body-large text-on-surface-variant">
              Join the inktale community
            </p>
          </div>

          <form class="form" data-form="">
            <div class="text-field-wrapper">
              <label for="email" class="body-large label"> Email </label>
              <input
                type="email"
                id="email"
                name="email"
                autocomplete="email"
                autofocus
                required
                class="body-large text-field"
                placeholder=""
              />
            </div>

            <div class="text-field-wrapper">
              <label for="password" class="body-large label"> Password </label>
              <input
                type="password"
                id="password"
                name="password"
                required
                minlength="8"
                class="body-large text-field"
                placeholder=""
              />
            </div>

            <button type="submit" class="btn btn-fill" data-submit-btn="">
              <p class="label-large">Sign in</p>
              <div class="state-layer"></div>
            </button>
          </form>

          <div class="card-footer">
            <p class="label-large">New to Inktale?</p>

            <a href="/register" class="label-large text-primary">Create an account</a>
          </div>
        </div>
      </div>
    </section>

    <!-- SNACKBAR -->
    <div class="snackbar-wrapper" data-snackbar-wrapper=""></div>
  </body>
</html>
