<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head', {title: 'Register | Inktale'}) %>
  </head>
  <body>
    <section class="section form-section">
      <div class="container">
        <div class="form-card">
          <div class="card-header">
            <a href="/" class="logo">
              <img
                src="/images/logo-light.svg"
                alt="Inktale Light"
                width="163"
                height="40"
                class="light"
              />
              <img
                src="/images/logo-dark.svg"
                alt="Inktale Dark"
                width="163"
                height="40"
                class="dark"
              />
            </a>

            <p class="body-large text-on-surface-variant">
              Join the inktale community
            </p>
          </div>

          <form action="" class="form" data-form="">
            <div class="text-field-wrapper">
              <label for="name" class="body-large label"> Full Name </label>
              <input
                type="text"
                id="name"
                name="name"
                autocomplete="name"
                autofocus
                required
                class="body-large text-field"
                placeholder=""
              />
            </div>

            <div class="text-field-wrapper">
              <label for="email" class="body-large label"> Email </label>
              <input
                type="email"
                id="email"
                name="email"
                autocomplete="email"
                required
                class="body-large text-field"
                placeholder=""
              />
            </div>

            <div class="text-field-wrapper">
              <label for="password" class="body-large label"> Password </label>
              <input
                type="password"
                id="password"
                name="password"
                required
                minlength="8"
                class="body-large text-field"
                placeholder=""
              />
            </div>

            <div class="text-field-wrapper">
              <label for="confirm-password" class="body-large label">
                Confirm password
              </label>
              <input
                type="password"
                id="confirm-password"
                name="confirm_password"
                required
                class="body-large text-field"
                placeholder=""
              />
            </div>

            <button type="submit" class="btn btn-fill" data-submit-btn="">
              <p class="label-large">Sign up</p>
              <div class="state-layer"></div>
            </button>
          </form>

          <div class="card-footer">
            <p class="label-large">Already have an account?</p>
            <a href="/login" class="label-large text-primary">Sign in</a>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
